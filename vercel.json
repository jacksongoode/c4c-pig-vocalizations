{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxDuration": 60,
        "installCommand": "pip install uv && uv pip install -e ."
      }
    },
    {
      "src": "api/upload.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxDuration": 60,
        "installCommand": "pip install uv && uv pip install -e ."
      }
    }
  ],
  "routes": [
    {
      "src": "/api/upload",
      "dest": "api/upload.py"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ]
}
